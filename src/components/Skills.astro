---
const skills = [
    { 
        name: 'Desarrollo Frontend',
        description: 'Creación de interfaces de usuario responsivas e interactivas',
        icon: 'https://images.unsplash.com/photo-1621839673705-6617adf9e890?q=80&w=1932&auto=format&fit=crop',
        alt: 'Pantalla mostrando código'
    },
    { 
        name: 'Desarrollo Backend',
        description: 'Desarrollo de aplicaciones robustas del lado del servidor',
        icon: 'https://images.unsplash.com/photo-1558494949-ef010cbdcc31?q=80&w=1934&auto=format&fit=crop',
        alt: 'Sala de servidores'
    },
    { 
        name: 'Resolución de Problemas',
        description: 'Encontrando soluciones eficientes a desafíos complejos',
        icon: 'https://images.unsplash.com/photo-1509475826633-fed577a2c71b?q=80&w=1771&auto=format&fit=crop',
        alt: 'Concepto de resolución de problemas'
    },
    { 
        name: 'Calidad de Código',
        description: 'Escribiendo código limpio, mantenible y bien probado',
        icon: 'https://images.unsplash.com/photo-1555066931-4365d14bab8c?q=80&w=1770&auto=format&fit=crop',
        alt: 'Código limpio en pantalla'
    }
];
---

<section id="skills" class="py-20 bg-slate-50/80 dark:bg-slate-900/80 backdrop-blur-sm">
    <div class="container mx-auto px-4">
        <h2 
            class="text-4xl font-bold text-center mb-12"
            data-aos="fade-down"
        >
            Habilidades
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            {skills.map((skill, index) => (
                <div 
                    class="bg-white/90 dark:bg-slate-800/90 p-6 rounded-lg shadow-lg hover:scale-105 transition-all group"
                    data-aos="fade-up"
                    data-aos-delay={200 * (index + 1)}
                >
                    <div class="relative h-40 mb-6 rounded-lg overflow-hidden">
                        <img 
                            src={skill.icon}
                            alt={skill.alt}
                            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                            loading="lazy"
                            width="400"
                            height="300"
                        />
                        <div class="absolute inset-0 bg-indigo-600/10 group-hover:bg-indigo-600/20 transition-colors duration-300"></div>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">{skill.name}</h3>
                    <p class="text-slate-600 dark:text-slate-300">{skill.description}</p>
                </div>
            ))}
        </div>
    </div>
</section>
