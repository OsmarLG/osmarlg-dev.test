<section id="contact" class="py-20 bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm">
    <div class="container mx-auto px-4">
        <h2 
            class="text-4xl font-bold text-center mb-12"
            data-aos="fade-down"
        >
            Contacto
        </h2>
        <div class="max-w-lg mx-auto">
            <form 
                class="space-y-6" 
                onsubmit="event.preventDefault();"
                data-aos="fade-up"
                data-aos-delay="200"
            >
                <div>
                    <label for="name" class="block text-sm font-medium mb-2">Nombre</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 dark:bg-slate-700/50 focus:ring-2 focus:ring-indigo-500 transition-all"
                        required
                        placeholder="Tu nombre completo"
                    />
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium mb-2">Correo Electrónico</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 dark:bg-slate-700/50 focus:ring-2 focus:ring-indigo-500 transition-all"
                        required
                        placeholder="tu@correo.com"
                    />
                </div>
                <div>
                    <label for="message" class="block text-sm font-medium mb-2">Mensaje</label>
                    <textarea
                        id="message"
                        name="message"
                        rows="4"
                        class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 dark:bg-slate-700/50 focus:ring-2 focus:ring-indigo-500 transition-all"
                        required
                        placeholder="¿En qué puedo ayudarte?"
                    ></textarea>
                </div>
                <button
                    type="submit"
                    class="w-full bg-indigo-600 text-white py-3 rounded-lg font-semibold hover:bg-indigo-700 transition-all hover:scale-105"
                >
                    Enviar Mensaje
                </button>
            </form>
        </div>
    </div>
</section>
